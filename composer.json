{
  "name": "luoyue/webman-mcp",
  "type": "library",
  "license": "Apache-2.0",
  "description": "Webman plugin luoyue/webman-mcp",
  "require": {
    "php": ">=8.1",
    "mcp/sdk": "dev-main",
    "nyholm/psr7": "^1.8",
    "webman/console": "^2.1.12",
    "webman/cache": "^2.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92",
    "workerman/webman-framework": "^2.1",
    "monolog/monolog": "^3.9",
    "webman/event": "^1.0",
    "webman/database": "^2.1",
    "webman/redis": "^2.1",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Luoyue\\WebmanMcp\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Luoyue\\WebmanMcp\\Tests\\": "tests"
    }
  },
  "scripts": {
    "cs:fix": "php-cs-fixer fix --verbose",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "phpstan": "phpstan analyse --memory-limit=2G",
    "phpstan-fix": "phpstan analyse --memory-limit=2G --fix"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "php-http/discovery": false
    }
  }
}